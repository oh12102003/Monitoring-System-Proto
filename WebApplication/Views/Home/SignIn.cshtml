
@{
    ViewBag.Title = "SignIn";
}

@Styles.Render("~/Content/dataContainer.css")

<div class="dataTitle">
    <h2>
        Sign In
    </h2>
</div>

<div id="dataSet" class="container dataContainer">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="panel-title">로그인</div>
            </div>
            <div class="panel-body">
                <form id="login-form" action = "@Url.Action("checkLogin")" method = "post">
                    <div>
                        <input type="text" class="form-control" name="userId" placeholder="Id" autofocus>
                    </div>
                    <div>
                        <input type="password" class="form-control" name="userPs" placeholder="Password">
                    </div>
                    <div>
                        <button type="submit" class="form-control btn btn-primary">로그인</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>