<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/font-awesome.min.css")

    @Styles.Render("~/Content/SimulMotLayouts.css");

    @Scripts.Render("~/Scripts/jquery-3.3.1.min.js")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        function recipeButtonCallback() {
            window.location.href = "@Url.Content("~/Recipe")";
        }

        function signInButtonCallback() {
            window.location.href = "@Url.Content("~/Home/SignIn")";
        }

        function signUpButtonCallback() {
            window.location.href = "@Url.Content("~/Home/SignUp")";
        }

        function signOutButtonCallback() {
            window.location.href = "@Url.Content("~/Home/SignOut")";
        }

        function monitoringButtonCallback() {
            window.location.href = "@Url.Content("~/Monitoring")";
        }

        function userListButtonCallback() {
            window.location.href = "@Url.Content("~/Home/showUserList")";
        }

    </script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a href="@Url.Content("~/")">
            <img src="@Url.Content("~/Sources/logo.svg")" class="d-inline-block align-top" width='40' height='40' alt='' style="margin-right : 10px">
        </a>

        @Html.ActionLink("SimulMot", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        <button class="navbar-toggler" type="button" data-toggle="collapse"
                data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarToggler">
            <div>
                <ul class="navbar-nav">
                    <li id="recipeButton" class="nav-item btn btn-outline-secondary mt-margin-xxxlarge"
                        onclick="monitoringButtonCallback()">
                        Monitoring
                    </li>

                    <li id="recipeButton" class="nav-item btn btn-outline-secondary mt-margin-xxlarge"
                        onclick="recipeButtonCallback()">
                        Recipe
                    </li>
                </ul>
            </div>

            @if (Session["userId"] == null)
            {
                <ul>
                    <li id = "loginButton" class="nav-item btn btn-outline-primary mt-margin-xxxlarge"
                        onclick="signInButtonCallback()">
                        로그인
                    </li>

                    <li id = "signUpButton" class="nav-item btn btn-outline-success mt-margin-xxlarge"
                        onclick = "signUpButtonCallback()">
                        회원가입
                    </li>
                </ul>
            }

            else
            {
                <ul>
                    <li id = "loginedUserId" class="nav-item item-margin btn btn-info">
                        환영합니다! @Session["userId"] 님!
                    </li>

                    <li id = "logoutButton" class="nav-item item-margin btn btn-danger"
                        onclick = "signOutButtonCallback()">
                        로그아웃
                    </li>
                </ul>
            }
        </div>
    </nav>

    <div class="container body-content" style="margin-top : 1.5em">
        <div id="messageShower"> </div>

        <setion>
            @RenderBody()
        </setion>

        <hr />
        <footer style="text-align : right">
            <p>Simulator Monitoring System</p>
        </footer>
    </div>
</body>
</html>
